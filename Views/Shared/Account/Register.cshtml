@model RegisterViewModel

<form class="form-signin needs-validation" asp-controller="Account" asp-action="Register" method="post">
    <div class="md-form">
        <i class="fas fa-envelope prefix grey-text d-flex"></i>
        <label for="email">Email</label>
        <input type="email" asp-for="email" class="form-control" id="reg_email" placeholder="You@example.com" required="">
        <div class="invalid-feedback">
            Please enter a valid email address.
        </div>
    </div>

    <div class="md-form">
        <i class="fas fa-envelope prefix grey-text d-flex"></i>
        <label for="loginName">Login</label>
        <input type="text" asp-for="loginName" class="form-control" id="loginName" placeholder="Login" required="">
        <div class="invalid-feedback">
            Please enter your login.
        </div>
    </div>
    
    <div class="md-form" onkeyup="validatePassword()">
        <i class="fas fa-lock prefix grey-text d-flex"></i>
        <label for="password">Password</label>
        <input type="password" asp-for="password" class="form-control" id="password" placeholder="Password" required="">
        <div class="invalid-feedback">
            Password must be at least 6 characters.
        </div>
    </div>

    <div class="md-form" onkeyup="confirmPassword()">
        <i class="fas fa-lock prefix grey-text d-flex"></i>
        <label for="password">Confirm password</label>
        <input type="password"  asp-for="passwordConfirm" class="form-control" id="password2" placeholder="Confirm password" required="">
        <div class="invalid-feedback">
            Please confirm your password.
        </div>
    </div>

    <div class="text-center">
        <p class="alert-warning align-content-lg-center">@Model.errorMessage</p>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-lg btn-primary">Create account</button>
    </div>
</form>